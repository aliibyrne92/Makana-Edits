<div class="form-group row">
    <label class="col-form-label col-sm-3" for="prescriber-form-zip">Zip Code</label>

    <div class="col-sm-9">
        <input id="prescriber-form-zip" 
            class="form-control" 
            name="prescriberZip" 
            type="text"
            pattern="(^\d{5}(-\d{4})?$)|(^[abceghjklmnprstvxyABCEGHJKLMNPRSTVXY]{1}\d{1}[A-Za-z]{1} *\d{1}[A-Za-z]{1}\d{1}$)">
    </div>
    
    <div class="invalid-feedback"></div>
</div>